{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build volcano (with clang)",
            "type": "shell",
            "command": "clang",
            "args": [
				"-Wall",
				"-Wno-unused-variable",
				"-Wno-missing-braces",
				"-g",
				"-Og",
                "--std=c++17",
				"-DVOLCANO_USE_GLFW",
                "-I/usr/include",
                "-I${workspaceRoot}/../VulkanSDK/1.1.82.0/x86_64/include",
                "-I${workspaceRoot}/../VulkanMemoryAllocator/src",
                "-I${workspaceRoot}/../stb",
                "-I${workspaceRoot}/../imgui",
                "-I${workspaceRoot}/../glfw/include",
                "-L${workspaceRoot}/../VulkanSDK/1.1.82.0/x86_64/lib",
                "-L${workspaceRoot}/../glfw/build/src",
                "src/Volcano.cpp",
                "src/platform/glfw/Main.cpp",
                "src/imgui/imgui_impl.cpp",
                "src/imgui/platform/glfw/imgui_impl_glfw.cpp",
                "-ovolcano",
                "-lm",
                "-ldl",
                "-lpthread",
                "-lstdc++",
                "-lX11",
                "-lvulkan",
                "-lglfw3",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}