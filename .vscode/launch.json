{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/volcano-Debug",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "(Windows) C++ Attach",
			"type": "cppvsdbg",
			"request": "attach",
			"processId": "${command:pickProcess}"
		},
		{
			"name": "(Windows) C++ Launch",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/volcano-Debug.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"symbolSearchPath": "srv*d:/symbolcache*https://msdl.microsoft.com/download/symbols;${env:VULKAN_SDK}/lib"
		}
	]
}