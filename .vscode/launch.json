		{
			"name": "(gdb) Launch Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/volcano-Debug",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{ "name":"DYLD_PRINT_LIBRARIES", "value":"1" },
				{ "name":"VK_LOADER_DEBUG", "value":"all" }
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
